generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =======================
// ENUMS
// =======================

enum Role {
  CLIENT // gym client
  TRAINER // gym trainer
  ADMIN // gym admin or owner
}

enum DaysOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

enum StatusList {
  PENDING // pending confirmation
  CONFIRMED // confirmed by the trainer
  CANCELLED // cancelled by the trainer or gym/admin
  MISSED // client did not attend
  COMPLETED // session completed successfully
  RESCHEDULED // session rescheduled
}

enum Concept {
  DAY // daily pass
  WEEK // weekly pass
  MONTH // monthly membership
  FORTNIGHT // biweekly membership
  QUARTER // quarterly membership
  SEMESTER // 6 months membership
  YEAR // annual membership
  OTHER // extra payment (plan personal, event, etc.)
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
}

enum NotificationType {
  RESERVATION
  PAYMENT
  PLAN_UPDATE
  CLIENT_TRAINING
  TRAINING_REQUEST
  TRAINER_MESSAGE
  GENERAL
}

// =======================
// CATEGORIES AND SPECIALITIES
// =======================

model Category {
  id        Int      @id @default(autoincrement())
  name      String //crossfit, weight
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Speciality {
  id        Int      @id @default(autoincrement())
  name      String
  status    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  trainers Trainer[]
}

// =======================
// CLIENTS
// =======================

model User {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  email     String    @unique
  googleId  String?   @unique
  telephone String?
  password  String?
  photo     String?
  role      Role      @default(CLIENT)
  status    Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deletedAt DateTime?

  reservations      Reservation[]
  progress          UserProgress[]
  payments          Payment[]
  TrainerReview     TrainerReview[]
  Trainer           Trainer? // Optional relation: if the user is a trainer, they have a single detailed trainer profile
  Notification      Notification[]
  ClientTrainerPlan ClientTrainerPlan[]

  @@index([email, slug, id])
}

// =======================
// TRAINERS
// =======================

model Trainer {
  id           Int        @id @default(autoincrement())
  biography    String
  rating       Float      @default(0)
  votesCount   Int        @default(0)
  userId       Int        @unique
  user         User       @relation(fields: [userId], references: [id])
  specialityId Int
  speciality   Speciality @relation(fields: [specialityId], references: [id])
  status       Boolean    @default(true)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now()) @updatedAt
  deletedAt    DateTime?

  schedules         Schedule[]
  reservations      Reservation[]
  TrainerReview     TrainerReview[]
  ClientTrainerPlan ClientTrainerPlan[]
}

// Optional: reviews of trainers by clients
model TrainerReview {
  id        Int      @id @default(autoincrement())
  trainerId Int
  trainer   Trainer  @relation(fields: [trainerId], references: [id])
  clientId  Int
  client    User     @relation(fields: [clientId], references: [id])
  rating    Int // 1-5
  comment   String?
  createdAt DateTime @default(now())
}

// =======================
// SCHEDULES
// =======================

model Schedule {
  id        Int        @id @default(autoincrement())
  trainerId Int
  trainer   Trainer    @relation(fields: [trainerId], references: [id])
  dayOfWeek DaysOfWeek
  startTime DateTime
  endTime   DateTime
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now()) @updatedAt

  reservations Reservation[]
}

// =======================
// RESERVATIONS
// =======================

model Reservation {
  id         Int      @id @default(autoincrement())
  clientId   Int
  client     User     @relation(fields: [clientId], references: [id])
  trainerId  Int
  trainer    Trainer  @relation(fields: [trainerId], references: [id])
  scheduleId Int
  schedule   Schedule @relation(fields: [scheduleId], references: [id])

  status     StatusList @default(PENDING)
  notes      String?
  reservedAt DateTime   @default(now())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now()) @updatedAt

  history ReservationHistory[]

  @@index([clientId, trainerId, scheduleId])
}

model ReservationHistory {
  id            Int         @id @default(autoincrement())
  reservationId Int
  reservation   Reservation @relation(fields: [reservationId], references: [id])

  oldStatus     StatusList
  newStatus     StatusList
  notes         String?
  changedByRole Role
  changedAt     DateTime   @default(now())
}

model ClientTrainerPlan {
  id         Int          @id @default(autoincrement())
  clientId   Int
  client     User         @relation(fields: [clientId], references: [id])
  trainerId  Int
  trainer    Trainer      @relation(fields: [trainerId], references: [id])
  daysOfWeek DaysOfWeek[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @default(now()) @updatedAt
}

// =======================
// USER PROGRESS AND ROUTINES
// =======================

model UserProgress {
  id     Int  @id @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])

  weight Float
  height Float?
  chest  Float?
  waist  Float?
  hips   Float?
  biceps Float?
  legs   Float?
  calf   Float?

  notes      String?
  recordedAt DateTime @default(now())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  photos   ProgressPhoto[]
  routines Routine[]

  @@index([userId, recordedAt])
}

model Routine {
  id             Int          @id @default(autoincrement())
  userProgressId Int
  userProgress   UserProgress @relation(fields: [userProgressId], references: [id])
  name           String
  description    String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @default(now()) @updatedAt
}

model ProgressPhoto {
  id             Int          @id @default(autoincrement())
  userProgressId Int
  userProgress   UserProgress @relation(fields: [userProgressId], references: [id])
  url            String?
  createdAt      DateTime     @default(now())
}

// =======================
// PAYMENTS
// =======================

model Payment {
  id        Int           @id @default(autoincrement())
  userId    Int
  user      User          @relation(fields: [userId], references: [id])
  amount    Float
  method    PaymentMethod
  concept   Concept
  startDate DateTime
  endDate   DateTime
  status    StatusList    @default(COMPLETED)
  paidAt    DateTime      @default(now())
  createdAt DateTime      @default(now())
  updatedAt DateTime      @default(now()) @updatedAt

  @@index([id, userId])
}

model Notification {
  id        Int              @id @default(autoincrement())
  userId    Int
  user      User             @relation(fields: [userId], references: [id])
  type      NotificationType @default(GENERAL)
  message   String
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())
  relatedId Int? // Optional ID of the related entity (reservation, payment, plan, etc.)
}
