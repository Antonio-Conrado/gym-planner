generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =======================
// ENUMS
// =======================

enum Role {
  CLIENT // gym client
  TRAINER // gym trainer
  ADMIN // gym admin or owner
}

enum DaysOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

enum StatusList {
  PENDING // pending confirmation
  CONFIRMED // confirmed by the trainer
  CANCELLED // cancelled by the trainer or gym/admin
  MISSED // client did not attend
  COMPLETED // session completed successfully
  RESCHEDULED // session rescheduled
}

enum Concept {
  DAY // daily pass
  WEEK // weekly pass
  MONTH // monthly membership
  FORTNIGHT // biweekly membership
  QUARTER // quarterly membership
  SEMESTER // 6 months membership
  YEAR // annual membership
  OTHER // extra payment (plan personal, event, etc.)
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
}

enum NotificationType {
  RESERVATION
  PAYMENT
  PLAN_UPDATE
  CLIENT_TRAINING
  TRAINING_REQUEST
  TRAINER_MESSAGE
  GENERAL
}

// =======================
// CATEGORIES AND SPECIALITIES
// =======================

model Category {
  id        Int      @id @default(autoincrement())
  name      String //crossfit, weight
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Speciality {
  id        Int      @id @default(autoincrement())
  name      String
  status    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  trainers Trainer[]
}

// =======================
// CLIENTS
// =======================

model User {
  id        Int       @id @default(autoincrement())
  name      String
  slug      String    @unique
  email     String    @unique
  googleId  String?
  telephone String?
  password  String?
  photo     String?
  role      Role      @default(CLIENT)
  status    Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @default(now()) @updatedAt
  deletedAt DateTime?

  reservations      Reservation[]
  progress          UserProgress?
  payments          Payment[]
  TrainerReview     TrainerReview[]
  Trainer           Trainer? // Optional relation: if the user is a trainer, they have a single detailed trainer profile
  Notification      Notification[]
  ClientTrainerPlan ClientTrainerPlan[]
}

// =======================
// TRAINERS
// =======================

model Trainer {
  id           Int        @id @default(autoincrement())
  biography    String
  rating       Float      @default(0)
  votesCount   Int        @default(0)
  userId       Int        @unique
  user         User       @relation(fields: [userId], references: [id])
  specialityId Int
  speciality   Speciality @relation(fields: [specialityId], references: [id])
  status       Boolean    @default(true)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @default(now()) @updatedAt
  deletedAt    DateTime?

  schedules         Schedule[]
  reservations      Reservation[]
  TrainerReview     TrainerReview[]
  ClientTrainerPlan ClientTrainerPlan[]
  Routine           Routine[]

  @@index([userId])
}

// Optional: reviews of trainers by clients
model TrainerReview {
  id        Int      @id @default(autoincrement())
  trainerId Int
  trainer   Trainer  @relation(fields: [trainerId], references: [id])
  clientId  Int
  client    User     @relation(fields: [clientId], references: [id])
  rating    Int // 1-5
  comment   String?
  createdAt DateTime @default(now())

  @@index([trainerId, clientId])
}

// =======================
// SCHEDULES
// =======================

model Schedule {
  id        Int        @id @default(autoincrement())
  trainerId Int
  trainer   Trainer    @relation(fields: [trainerId], references: [id])
  dayOfWeek DaysOfWeek
  startTime DateTime
  endTime   DateTime
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now()) @updatedAt

  reservations Reservation[]

  @@index([trainerId])
}

// =======================
// RESERVATIONS
// =======================

model Reservation {
  id         Int      @id @default(autoincrement())
  clientId   Int
  client     User     @relation(fields: [clientId], references: [id])
  trainerId  Int
  trainer    Trainer  @relation(fields: [trainerId], references: [id])
  scheduleId Int
  schedule   Schedule @relation(fields: [scheduleId], references: [id])

  status     StatusList @default(PENDING)
  notes      String?
  reservedAt DateTime   @default(now())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @default(now()) @updatedAt

  history ReservationHistory[]

  @@index([clientId, trainerId, scheduleId])
}

model ReservationHistory {
  id            Int         @id @default(autoincrement())
  reservationId Int
  reservation   Reservation @relation(fields: [reservationId], references: [id])

  oldStatus     StatusList
  newStatus     StatusList
  notes         String?
  changedByRole Role
  changedAt     DateTime   @default(now())

  @@index([reservationId])
}

model ClientTrainerPlan {
  id         Int          @id @default(autoincrement())
  clientId   Int
  client     User         @relation(fields: [clientId], references: [id])
  trainerId  Int
  trainer    Trainer      @relation(fields: [trainerId], references: [id])
  daysOfWeek DaysOfWeek[]
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @default(now()) @updatedAt

  @@index([trainerId, clientId])
}

// =======================
// USER PROGRESS AND ROUTINES
// =======================

model UserProgress {
  id                  Int                   @id @default(autoincrement())
  userId              Int                   @unique
  user                User                  @relation(fields: [userId], references: [id])
  weight              Float
  height              Float?
  updatedAt           DateTime              @default(now()) @updatedAt
  UserProgressHistory UserProgressHistory[]
  Routine             Routine[]
  ProgressPhoto       ProgressPhoto[]

  @@index([userId])
}

model UserProgressHistory {
  id             Int          @id @default(autoincrement())
  userProgressId Int
  userProgress   UserProgress @relation(fields: [userProgressId], references: [id])
  weight         Float
  height         Float?
  chest          Float?
  waist          Float?
  hips           Float?
  biceps         Float?
  legs           Float?
  calf           Float?
  notes          String?
  recordedAt     DateTime     @default(now())

  @@index([userProgressId])
}

model Routine {
  id              Int               @id @default(autoincrement())
  userProgressId  Int
  userProgress    UserProgress      @relation(fields: [userProgressId], references: [id])
  trainerId       Int
  trainer         Trainer           @relation(fields: [trainerId], references: [id])
  name            String
  description     String?
  goal            String?
  startDate       DateTime
  endDate         DateTime
  durationWeek    Int
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @default(now()) @updatedAt
  RoutineExercise RoutineExercise[]
  RoutineLog      RoutineLog[]

  @@index([trainerId, userProgressId])
}

model RoutineExercise {
  id         Int        @id @default(autoincrement())
  routineId  Int
  routine    Routine    @relation(fields: [routineId], references: [id])
  daysOfWeek DaysOfWeek
  name       String
  muscle     String
  sets       Int
  reps       String
  notes      String?

  @@index([routineId])
}

model RoutineLog {
  id        Int      @id @default(autoincrement())
  routineId Int
  routine   Routine  @relation(fields: [routineId], references: [id])
  date      DateTime
  completed Boolean  @default(false)
  notes     String?

  @@index([routineId])
}

model ProgressPhoto {
  id             Int          @id @default(autoincrement())
  userProgressId Int
  userProgress   UserProgress @relation(fields: [userProgressId], references: [id])
  url            String[]
  createdAt      DateTime     @default(now())

  @@index([userProgressId])
}

// =======================
// PAYMENTS
// =======================

model PaymentConcept {
  id      Int       @id @default(autoincrement())
  amount  Float
  concept Concept
  payment Payment[]
}

model Payment {
  id               Int            @id @default(autoincrement())
  userId           Int
  user             User           @relation(fields: [userId], references: [id])
  paymentConceptId Int
  paymentConcept   PaymentConcept @relation(fields: [paymentConceptId], references: [id])
  method           PaymentMethod
  reference        String?
  startDate        DateTime
  endDate          DateTime
  status           StatusList     @default(COMPLETED)
  paidAt           DateTime       @default(now())
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @default(now()) @updatedAt

  @@index([userId, startDate, endDate, status])
  @@index([paidAt])
}

model Notification {
  id        Int              @id @default(autoincrement())
  userId    Int
  user      User             @relation(fields: [userId], references: [id])
  type      NotificationType @default(GENERAL)
  message   String
  read      Boolean          @default(false)
  createdAt DateTime         @default(now())
  relatedId Int? // Optional ID of the related entity (reservation, payment, plan, etc.)

  @@index([userId, type])
}
